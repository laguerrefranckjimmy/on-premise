# Build stage
FROM eclipse-temurin:11 as build

# Install Maven
RUN apt-get update && apt-get install -y maven && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy project files
COPY pom.xml ./
COPY src ./src

# Build Vert.x JAR
RUN mvn clean package -DskipTests

# Runtime stage
FROM eclipse-temurin:11-jre-alpine
WORKDIR /app
COPY --from=build /app/target/*.jar vertx.jar

EXPOSE 8080

CMD ["java", "-jar", "/app/vertx.jar"]
